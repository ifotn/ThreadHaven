@model IEnumerable<Category>

@{
    ViewData["Title"] = "Shop";
}

<h1>Shop for some Cool Threads</h1>

<section class="row card-group">
    @foreach (var category in Model)
    {
        <article class="col-lg-4 mb-3">
            <div class="card mb-4 text-center h-100">
                <div class="card-body">
                    <a asp-action="ByCategory" asp-route-id="@category.CategoryId">
                        @category.Name
                    </a>                      
                </div>
            </div>
        </article>
    }
</section>
